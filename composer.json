{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/wernerkrauss/silverstripe-elemental-map.git"
        }
    ],
    "require": {
        "php": "^8.1",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "^4.11",
        "tractorcow/silverstripe-fluent": "^6.0.0",
        "dnadesign/silverstripe-elemental": "^4",
        "dynamic/silverstripe-elemental-promos": "^3",
        "fractas/elemental-stylings": "1.0-rc2",
        "jonom/silverstripe-betternavigator": "^5.2.0",
        "lerni/klaro-cookie-consent": "v2.x-dev as 0.2",
        "stevie-mayhew/hasoneedit": "^2",
        "silverstripe/login-forms": "~4.7.0@stable",
        "nightjar/ss-slug": "^2",
        "purplespider/silverstripe-basic-gallery-extension": "^3",
        "purplespider/silverstripe-elemental-basic-gallery": "^2",
        "gorriecoe/silverstripe-menu": "^2",
        "symbiote/silverstripe-grouped-cms-menu": "^4",
        "symbiote/silverstripe-gridfieldextensions": "^3.5.0",
        "edgarindustries/silverstripe-elemental-map": "dev-remove-guzzle-dependency",
        "bigfork/silverstripe-mapboxfield": "^0.0.3",
        "silverstripe/googlesitemaps": "^2",
        "jonom/focuspoint": "^4",
        "wernerkrauss/silverstripe-piwik": "^0.4.0",
        "wedevelopnl/silverstripe-webp-images": "^1"
    },
    "require-dev": {
        "dnadesign/silverstripe-populate": "^2.2",
        "phpunit/phpunit": "^9.5",
        "silverleague/ideannotator": "^3",
        "squizlabs/php_codesniffer": "^3.6",
        "wernerkrauss/silverstripe-rector": "dev-main",
        "syntro/silverstripe-phpstan": "^1.0",
        "deployer/deployer": "^7"
    },
    "extra": {
        "resources-dir": "_resources",
        "expose": [
            "themes/mytheme/images",
            "themes/mytheme/fonts",
            "themes/mytheme/dist"
        ],
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "config": {
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "fix": "vendor/bin/phpcbf",
        "rector": "vendor/bin/rector -v",
        "phpstan": "vendor/bin/phpstan"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
