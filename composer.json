{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/wernerkrauss/silverstripe-elemental-map.git"
        },
        {
            "type": "git",
            "url": "https://github.com/wernerkrauss/silverstripe-elemental-stylings.git"
        },
        {
            "type": "git",
            "url": "https://github.com/kevinnoorlander/silverstripe-menu.git"
        }
    ],
    "require": {
        "php": "^8.3",
        "silverstripe/recipe-cms": "^5.2",
        "tractorcow/silverstripe-fluent": "^7",
        "dnadesign/silverstripe-elemental": "^5",
        "dynamic/silverstripe-elemental-promos": "^4",
        "fractas/elemental-stylings": "dev-wernerkrauss-cms-5",
        "jonom/silverstripe-betternavigator": "^6",
        "silverstripe/login-forms": "^5",
        "purplespider/silverstripe-basic-gallery-extension": "^4",
        "purplespider/silverstripe-elemental-basic-gallery": "^3",
        "gorriecoe/silverstripe-menu": "dev-main as 3.0",
        "symbiote/silverstripe-grouped-cms-menu": "^4",
        "symbiote/silverstripe-gridfieldextensions": "^4",
        "silverstripe/googlesitemaps": "^3",
        "jonom/focuspoint": "^5",
        "wedevelopnl/silverstripe-webp-images": "^2",
        "lerni/klaro-cookie-consent": "v2.x-dev as 1.0"
    },
    "require-dev": {
        "dnadesign/silverstripe-populate": "^3.0.0-beta1",
        "phpunit/phpunit": "^9.5",
        "silverleague/ideannotator": "^3",
        "squizlabs/php_codesniffer": "^3.6",
        "wernerkrauss/silverstripe-rector": "^0.1",
        "syntro/silverstripe-phpstan": "^5.0",
        "pstaender/ssshell": "^v0.1",
        "deployer/deployer": "^7"
    },
    "extra": {
        "resources-dir": "_resources",
        "expose": [
            "themes/mytheme/images",
            "themes/mytheme/fonts",
            "themes/mytheme/dist"
        ],
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "config": {
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "fix": "vendor/bin/phpcbf",
        "rector": "vendor/bin/rector -v",
        "rector-dry": "vendor/bin/rector -v --dry-run",
        "phpstan": "vendor/bin/phpstan"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
